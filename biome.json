{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "maxSize": 262144
  },
  "formatter": {
    "enabled": true,
    "attributePosition": "auto",
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 320
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "always",
      "attributePosition": "auto",
      "bracketSameLine": true,
      "bracketSpacing": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "double",
      "lineEnding": "lf",
      "lineWidth": 320,
      "quoteProperties": "preserve",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 320,
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["public/"],
    "rules": {
      "complexity": {
        "noUselessTernary": "off"
      },
      "style": {
        "useConst": "off"
      },
      "suspicious": {
        "noConfusingVoidType": "off",
        "noExplicitAny": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": false
  }
}
