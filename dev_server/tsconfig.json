{
  "compilerOptions": {
    // Enable latest features
    "module": "ESNext",
    "moduleDetection": "force",
    "target": "ESNext",

    // Bundler mode
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,

    // Best practices
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "node_modules", //
    "**/node_modules/*"
  ]
}
